@using CourtJustice.Domain.Models;
@model IEnumerable<RemainTask>

<div class="table-responsive">
    <table class="table table-bordered table-hover" id="tbl_loanee">
        <thead>
            <tr class="bg-primary text-white" role="row">
                <th>
                    @Html.DisplayNameFor(model => model.TaskDatetime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TaskDetail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignTo)
                </th>
                   <th>
                    @Html.DisplayNameFor(model => model.AssignFrom)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.TaskDatetime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TaskDetail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignTo)
                    </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.AssignFrom)
                    </td>
                    <td class="w150">
                        <div class="d-inline">
                            <a class="btn btn-sm btn-primary text-white" asp-action="Edit" asp-route-id="@item.TaskId"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-sm btn-danger text-white" onclick="confirmDelete('@item.TaskId');"><i class='fa fa-trash'></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>