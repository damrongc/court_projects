@using CourtJustice.Domain.ViewModels;
@model IEnumerable<GroupUserViewModel>

<div class="table-responsive">
    <table class="table table-bordered table-hover data-table">
        <thead>
            <tr class="bg-primary text-white" role="row">
                <th>
                    @Html.DisplayNameFor(model => model.GroupId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupName)
                </th>
                @*                <th>
                @Html.DisplayNameFor(model => model.EmployerName)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDateTime)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="w100">
                        @Html.DisplayFor(modelItem => item.GroupId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupName)
                    </td>
                    @*                    <td>
                @Html.DisplayFor(modelItem => item.EmployerName)
                </td>*@
                    <td>
                        @if (item.IsActive)
                        {
                            <div class="badge badge-success badge-pill">ใช้งาน</div>
                        }
                        else
                        {
                            <div class="badge badge-light badge-pill">ไม่ใช้งาน</div>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDateTime)
                    </td>
                    <td class="w150">
                        <div class="d-inline">
                            <a class="btn btn-sm btn-primary text-white" asp-action="Edit" asp-route-id="@item.GroupId"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-sm btn-danger text-white" onclick="confirmDelete('@item.GroupId');"><i class='fa fa-trash'></i></a>
                            @{
                                var modelTitle = $"Set Permission of {item.GroupName}";
                                if (item.GroupId != 1)
                                {
                                    <a class="btn btn-sm btn-info text-white" asp-action="SetPermission" asp-route-id="@item.GroupId"><i class='fa fa-check'></i></a>
                                }
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>