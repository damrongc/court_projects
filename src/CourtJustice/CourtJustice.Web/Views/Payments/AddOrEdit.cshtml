@using CourtJustice.Domain.Models;
@model Payment

@{
    Layout = null;
    ViewData["Title"] = "ข้อมูลการชำระ";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="AddOrEdit" onsubmit="return AddOrEditPayment(this);">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="PaymentId" class="form-control" type="hidden" id="txtPaymentId"/>
                            <div class="row">

@*
                                <div class="form-group col-md-2">
                                    <label asp-for="PaymentSeq" class="control-label"></label>
                                    <input asp-for="PaymentSeq" class="form-control" type="number" readonly />
                                </div>*@

                                <div class="form-group col-md-2">
                                    <label asp-for="PaymentDate" class="control-label"></label>
                                    <input asp-for="PaymentDate" class="form-control date" asp-format="{0:yyyy-MM-dd}" id="txtPaymentDate" />
                                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label asp-for="Amount" class="control-label"></label>
                                    <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" id="txtAmount" />
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label asp-for="Fee" class="control-label"></label>
                                    <input asp-for="Fee" class="form-control" type="number" step="0.01" min="0" id="txtFee" />
                                    <span asp-validation-for="Fee" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label asp-for="StartOverdueStatus" class="control-label"></label>
                                    <input asp-for="StartOverdueStatus" class="form-control" id="txtStartOverdueStatus" />
                                    <span asp-validation-for="StartOverdueStatus" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label asp-for="EndOverdueStatus" class="control-label"></label>
                                    <input asp-for="EndOverdueStatus" class="form-control" id="txtEndOverdueStatus" />
                                    <span asp-validation-for="EndOverdueStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                @{
                                    if (Model.PaymentId ==0)
                                    {
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                    }
                                    else
                                    {
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    }
                                }
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

