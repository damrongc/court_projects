@using CourtJustice.Domain.Models;
@model LoanType

@{
    ViewData["Title"] = "ประเภทสินเชื่อ";
}
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <h3 class="mb-3">แก้ไข @ViewData["Title"]</h3>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="LoanTypeCode" class="control-label"></label>
                                    <input asp-for="LoanTypeCode" class="form-control" readonly/>
                                    <span asp-validation-for="LoanTypeCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">

                                <div class="form-group col-md-6">
                                    <label asp-for="LoanTypeName" class="control-label"></label>
                                    <input asp-for="LoanTypeName" class="form-control" />
                                    <span asp-validation-for="LoanTypeName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <a asp-action="Index" class="btn btn-light">Back</a>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
