@{
    Layout = null;
}
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <form id="form" name="form" enctype="multipart/form-data" method="post" >

                            <input type="hidden" id="hidUploadUrl" value=@Url.Action("ConfirmImport", "LoaneeRemarks") />
                            <input type="hidden" id="hidProgressUrl" value=@Url.Action("Progress", "LoaneeRemarks") />
                            
                            <div class="form-group mb-2">
                                <label class="control-label">Excel file</label>
                                <input id="files" name="files" class="form-control" type="file" style="height:50px;" />
                            </div>
                            <div class="form-group mb-2">
                                <a class="btn btn-light" asp-action="Index">Back</a>
                                <input type="button" id="btnImport"  value="Import" class="btn btn-primary" onclick="importLoaneeRemark('files');" />
                            </div>
                        </form>
                        <span style="white-space: pre-line">@ViewBag.Message</span>
                        <div class="progress">
                            <div id="progress" class="progress-bar progress-bar-striped progress-bar-animated"
                                 role="progressbar"
                                 aria-valuenow="25"
                                 aria-valuemin="0"
                                 aria-valuemax="100" style="width: 0%;">
                                <div id="label" class="control-label">0%</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

