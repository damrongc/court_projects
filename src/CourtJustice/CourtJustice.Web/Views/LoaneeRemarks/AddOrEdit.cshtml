@using CourtJustice.Domain.Models;
@model LoaneeRemark

@{
    Layout = null;
    ViewData["Title"] = "รายงายผลการติดตาม";
    var appointmentDate = Model.AppointmentDate == DateOnly.MinValue ? "" : Model.AppointmentDate.ToString("dd-MM-yyyy");
    var transactionDatetime = Model.TransactionDatetime == DateTime.MinValue ? "" : Model.TransactionDatetime.ToString("dd-MM-yyyy");
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-12">

                        <form asp-action="AddOrEdit" onsubmit="return AddOrEditLoaneeRamark(this);">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="LoaneeRemarkId" class="form-control" type="hidden" />

                            <div class="row">

                                <div class="form-group col-md-3">
                                    <label asp-for="TransactionDatetime" class="control-label">วันที่ทำรายการ</label>
                                    <input type="text" class="form-control dateonly" asp-for="TransactionDatetime" id="txtTransactionDatetime" asp-format="{0:dd-MM-yyyy}" />
                                </div>

                                <div class="form-group col-md-3">
                                    <label asp-for="AppointmentDate" class="control-label"></label>
                                    <input type="text" class="form-control dateonly" asp-for="AppointmentDate" id="txtAppointmentDate" asp-format="{0:dd-MM-yyyy}" />
                                </div>

                                <div class="form-group col-md-3">
                                    <label asp-for="AppointmentContract" class="control-label"></label>
                                    <input asp-for="AppointmentContract" class="form-control" />
                                    <span asp-validation-for="AppointmentContract" class="text-danger"></span>
                                </div>



                            </div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label asp-for="ContractNo" class="control-label"></label>
                                    <input asp-for="ContractNo" class="form-control" />
                                    <span asp-validation-for="ContractNo" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-3">
                                    <label asp-for="Amount" class="control-label"></label>
                                    <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="Amount" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label class="control-label" asp-for="BankActionCodeId"></label>
                                    <select class="form-control dropdown" id="ddlBankActionCode" asp-for="BankActionCodeId" asp-items="@ViewBag.BankActionCodes">
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label" asp-for="BankResultCodeId"></label>
                                    <select class="form-control dropdown" id="ddlBankActionCode" asp-for="BankResultCodeId" asp-items="@ViewBag.BankResultCodes">
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label" asp-for="CompanyActionCodeId"></label>
                                    <select class="form-control dropdown" id="ddlCompanyActionCodes" asp-for="CompanyActionCodeId" asp-items="@ViewBag.CompanyActionCodes">
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label class="control-label" asp-for="CompanyResultCodeId"></label>
                                    <select class="form-control dropdown" id="ddlCompanyResultCodes" asp-for="CompanyResultCodeId" asp-items="@ViewBag.CompanyResultCodes">
                                    </select>
                                </div>

                            </div>

                            <div class="row">

                                <div class="form-group col-md-12">
                                    <label asp-for="Remark" class="control-label"></label>
                                    @*<textarea asp-for="Remark" class="form-control" rows="5"></textarea>*@
                                    <input asp-for="Remark" class="form-control" type="text" />
                                    <span asp-validation-for="Remark" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">

                                <input type="submit" value="Create" class="btn btn-primary" />

                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@Html.Hidden("hdGetAddressSetById", Url.Action("GetAddressById", "AddressSets"))
@section scripts{
    <script src="~/js/pages/loanee_remark.js" asp-append-version="true"></script>
}