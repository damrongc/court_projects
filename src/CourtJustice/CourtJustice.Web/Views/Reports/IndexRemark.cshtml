@using CourtJustice.Domain.ViewModels;
@model IEnumerable<LoaneeRemarkExcelViewModel>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-wrap justify-content-between">
                    <h3 class="mb-3">รายงานการติดตาม</h3>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-inline">
                            <div class="form-group">
                                <label class="control-label mr-1">ผู้ว่าจ้าง</label>
                                <select id="ddlEmployerFilter" class="form-control" asp-items="ViewBag.Employers"></select>
                            </div>
                            <div class="form-group ml-2">
                                <label class="control-label mr-1" for="txtStartDate">วันที่เริ่มต้น</label>
                                <input type="text" class="form-control date" id="txtStartDate" />
                            </div>
                            <div class="form-group ml-2">
                                <label class="control-label mr-1" for="txtEndDate">วันที่สินสุด</label>
                                <input type="text" class="form-control date" id="txtEndDate" />
                            </div>
                            <div class="ml-2">
                                <a onclick="getRemarkReport('@Url.Action("GetRemarkReport","Reports")');" class="btn btn-primary btn-sm text-white"><i class="fa fa-refresh"></i> Show Data</a>
                            </div>
                            <div class="ml-2">
                                <a onclick="exportRemarkReport('@Url.Action("RemarkReport", "Reports")','@Url.RouteUrl(new { Controller = "Reports", Action = "DownloadExcel" })')"
                                   class="btn btn-info btn-sm text-white">
                                    <i class="fa fa-file-excel-o"></i> Export Excel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div id="view-table">
                    @await Html.PartialAsync("_ViewTableRemark", Model)
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/js/pages/report.js" asp-append-version="true"></script>

}
