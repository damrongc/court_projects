@using CourtJustice.Domain.Models
@model IEnumerable<LoanTaskStatus>


<div class="table-responsive">
    <table class="table table-bordered table-hover data-table">
        <thead>
            <tr class="bg-primary text-white" role="row">
                <th>
                    @Html.DisplayNameFor(model => model.LoanTaskStatusId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LoanTaskStatusName)
                </th>
               
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoanTaskStatusId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LoanTaskStatusName)
                    </td>

                
                    <td class="w100">
                        <div class="d-inline">
                            <a class="btn btn-sm btn-primary text-white" asp-action="Edit" asp-route-id="@item.LoanTaskStatusId"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-sm btn-danger text-white" onclick="confirmDelete('@item.LoanTaskStatusId');"><i class='fa fa-trash'></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>