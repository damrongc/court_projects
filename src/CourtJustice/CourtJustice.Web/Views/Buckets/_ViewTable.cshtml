@using CourtJustice.Domain.Models
@model IEnumerable<Bucket>


<div class="table-responsive">
    <table class="table table-bordered table-hover data-table">
        <thead>
            <tr class="bg-primary text-white" role="row">
                <th>
                    @Html.DisplayNameFor(model => model.BucketId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BucketName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDateTime)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BucketId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BucketName)
                    </td>

                    <td>
                        @if (item.IsActive)
                        {
                            <div class="badge badge-outline-success badge-pill">ใช้งาน</div>
                        }
                        else
                        {
                            <div class="badge badge-outline-light badge-pill">ไม่ใช้งาน</div>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDateTime)
                    </td>
                    <td class="w130">
                        <div class="d-inline">
                            <a class="btn btn-sm btn-primary text-white" asp-action="Edit" asp-route-id="@item.BucketId"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-sm btn-danger text-white" onclick="confirmDelete('@item.BucketId');"><i class='fa fa-trash'></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>