@using CourtJustice.Domain.Models;
@model Guarantor
@{
    Layout = null;
    ViewData["Title"] = "ผู้ค้ำประกัน";
    var showAddressSetLookupUrl = @Url.Action("IndexAddressSetLookup", "AddressSets");
    var getAddressSetLookupUrl = @Url.Action("GetWithPaging", "AddressSets");
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="AddOrEdit" onsubmit="return AddOrEditGuarantor(this);">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="form-group col-md-3">
                                    <label asp-for="GuarantorCode" class="control-label"></label>
                                    @{
                                        if (string.IsNullOrEmpty(Model.GuarantorCode))
                                        {
                                            <input asp-for="GuarantorCode" class="form-control" />
                                        }
                                        else
                                        {
                                            <input asp-for="GuarantorCode" class="form-control" readonly />
                                        }
                                    }
                                    <span asp-validation-for="GuarantorCode" class="text-danger"></span>
                                </div>
                              
                                <div class="form-group col-md-5">
                                    <label asp-for="FullName" class="control-label"></label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>

                                </div>
                                <div class="form-group col-md-2">
                                    <label asp-for="PhoneNumber" class="control-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label asp-for="Address" class="control-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Address" type="text" class="form-control" id="txtAddressSetLookup" />
                                        <span class="input-group-append">
                                            <a href="#" onclick="showLookup('0','@showAddressSetLookupUrl','@getAddressSetLookupUrl');" class="btn btn-primary text-white">...</a>
                                        </span>
                                    </div>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="AddressDetail" class="control-label"></label>
                                    <input asp-for="AddressDetail" class="form-control" />
                                    <span asp-validation-for="AddressDetail" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@Html.Hidden("hdGetAddressSetById", Url.Action("GetAddressById", "AddressSets"))