@{
    ViewData["Title"] = "ลูกหนี้";
}
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <h3 class="mb-3">Import @ViewData["Title"]</h3>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form id="form" name="form" enctype="multipart/form-data" method="post" >

                            <input type="hidden" id="hidUploadUrl" value=@Url.Action("ConfirmImport", "Loanees") />
                            <input type="hidden" id="hidProgressUrl" value=@Url.Action("Progress", "Loanees") />
                            <div class="form-group">
                                <label class="control-label">ผู้ว่าจ้าง/ธนาคาร</label>
                                <select class="form-control dropdown" id="ddlEmployer"  asp-items="@ViewBag.Employers">
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Excel file</label>
                                <input id="files" name="files" class="form-control" type="file" style="height:50px;" />
                            </div>
                            <div class="form-group">
                                <a class="btn btn-light" asp-action="Index">Back</a>
                                <input type="button" id="btnImport" value="Import" class="btn btn-primary" onclick="importLoanee('files');" />
                            </div>
                        </form>
                        <span style="white-space: pre-line">@ViewBag.Message</span>
                        <div class="progress">
                            <div id="progress" class="progress-bar progress-bar-striped progress-bar-animated"
                                 role="progressbar"
                                 aria-valuenow="25"
                                 aria-valuemin="0"
                                 aria-valuemax="100" style="width: 0%;">
                                <div id="label" class="control-label">0%</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @*<script src="~/js/pages/loanee.js" asp-append-version="true"></script>*@
    <script src="~/js/pages/upload_with_progress.js" asp-append-version="true"></script>
}