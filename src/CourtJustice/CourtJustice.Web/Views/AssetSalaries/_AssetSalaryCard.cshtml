@using CourtJustice.Domain.ViewModels;
@using System.Globalization;
@model IEnumerable<AssetSalaryViewModel>;
@{
    Layout = null;
    var cultureInfor = new CultureInfo("th-TH");

}
<a class="btn btn-success btn-sm text-white" onclick="showInPopupXL('@Url.Action("AddOrEdit","AssetSalaries",null,Context.Request.Scheme)','เพิ่มข้อมูลหลักทรัพย์(เงินเดือน)')"><i class="fa fa-plus"></i> Create New</a>

<div class="table-responsive">
    <table class="table table-bordered table-hover data-table">
        <thead>
            <tr class="bg-primary text-white" role="row">
    @*            <th>
                    @Html.DisplayNameFor(model => model.AssetId)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SalaryDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                      <th>
                    @Html.DisplayNameFor(model => model.AddressDetail)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
         @*           <td>
                        @Html.DisplayFor(modelItem => item.AssetId)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Company)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @item.SalaryDate.ToString("dd-MM-yyyy",cultureInfor)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddressDetail)
                    </td>
                    <td class="w150">
                        <div class="d-inline">
                            <a class="btn btn-sm btn-primary text-white" onclick="showInPopupXL('@Url.Action("AddOrEdit","AssetSalaries",new {id=item.AssetId},Context.Request.Scheme)','แก้ไขข้อมูลหลักทรัพย์(เงินเดือน)')"><i class='fa fa-edit'></i></a>
                            <a class="btn btn-sm btn-danger text-white" onclick="confirmDeleteAssetSalary('@Url.Action("Delete","AssetSalaries",new {id=item.AssetId},Context.Request.Scheme)');"><i class='fa fa-trash'></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>